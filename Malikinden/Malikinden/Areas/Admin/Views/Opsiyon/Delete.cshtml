@model Entity.Opsiyon

@{
    ViewData["Title"] = "Sil";
}

<h1>Sil</h1>

<h3>Silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Satis</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OpsiyonFiyati)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OpsiyonFiyati)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OpsiyonTarihi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OpsiyonTarihi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OpsiyonBitisTarihi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OpsiyonBitisTarihi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Arac)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Arac.KasaTipi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Musteri)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Musteri.Adi)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> 
        <a class="btn btn-secondary" asp-action="Index">Listeye Dön</a>
    </form>
</div>

@section Scripts
    {

    @if (TempData["basarisiz"] != null)
    {
        <script>
            Swal.fire({
                icon: "error",
                title: "Silme basarısız",
                text: "@TempData["basarisiz"]"
            });

        </script>
    }
}
