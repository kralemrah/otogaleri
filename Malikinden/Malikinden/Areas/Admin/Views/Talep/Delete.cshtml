@model Entity.Talep
@{
    ViewData["Title"] = "Sil";
}

<h1>Sil</h1>

<h3>Rolü silmek istiyor musunuz ?</h3>
<div>
  
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Türü
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tur)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index">Listeye Dön</a>
    </form>
</div>
