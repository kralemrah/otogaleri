@model Entity.Marka

@{
    ViewData["Title"] = "Sil";
}

<h1 class="mt-2">Sil</h1>

<h3>Silmek İstedğinizden Emin misiniz?</h3>
<div>
   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Adi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Adi)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index">Listeye Dön</a>
    </form>
</div>

@section Scripts
    {

    @if (TempData["basarisiz"] != null)
    {
        <script>
            Swal.fire({
                icon: "error",
                title: "Silme basarısız",
                text: "@TempData["basarisiz"]"
            });

        </script>
    }
}