@model IEnumerable<Entity.Marka>

@{
    ViewData["Title"] = "Marka";
}

<h1>Marka</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Yeni Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Adi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Adi)
            </td>
            <td>

                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts
    {

    @if (TempData["basarili"] != null)
    {
        <script>

            Swal.fire({
                title: "MARKA",
                text: "@TempData["basarili"]",
                icon: "success"
            });
        </script>
    }
}