@model IEnumerable<Entity.Arac>
@{
    ViewData["Title"] = "List";
}

<h1 style="text-align:center;">Tüm Araçlarımız</h1>

<div class="container px-4 px-lg-5 mt-5">
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

        @foreach (var item in Model)
        {
            <div class="col mb-5">
                <div class="card h-100">
                    <!-- Product image-->
                    <img class="card-img-top" src="/Img/Cars/@item.Resim1" alt="...">
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder">@item.Marka.Adi @item.Model</h5>
                            <p>@item.YakitTipi - @item.VitesTipi</p>
                            <p>@item.KasaTipi - @item.ModelYili</p>
                            <!-- Product price-->
                            @item.Fiyat TL
                        </div>
                    </div>
                    <!-- Product actions-->
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="/Arac/Index/@item.Id">İncele</a>
                            @if (Context.User.Identity.IsAuthenticated)
                            {
                       <form action="/Favorites/Add" method="post" >
                           <input type="hidden" name="aracId" value="@item.Id" />
                           <button type="submit" class="btn btn-outline-warning"> Favorilere ekle</button>
                       </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>


